<Alloy>
	<Window class='container' onOpen='doopen'>
		<Toolbar class='toolbar' platform='ios'>
			<Items>
				<FlexSpace/>
				<Label id='windowtitle' />
				<FlexSpace/>
			</Items>
		</Toolbar>
		<View class='content'>
			<Label id='songtitle' class='songtitle'></Label>
			<View class='controlsbar'>
				<View class='button' id='prev' >
					<ImageView image='btnprev.png' class='btnprev' onTouchstart='prevdown' onTouchend='prevup'/>
				</View>
				<View class='button' id='play'>
					<ImageView image='btnplay.png' class='btnplay' onTouchstart='playdown' onTouched='playup'/>
				</View>
				<View image='btnnext.png' class='button' id='next'>
					<ImageView image='btnnext.png' class='btnnext' onTouchstart='nextdown' onTouched='nextup'/>
				</View>
			</View>
		</View>
	</Window>
</Alloy>